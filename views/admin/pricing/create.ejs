<%- include('../../partials/admin-header') %>

<div class="container mt-4">
  <h1>Add New Pricing</h1>
  <h3>Tour: <%= tour.name %></h3>

  <% if (locals.error) { %>
    <div class="alert alert-danger"><%= error %></div>
  <% } %>

  <form method="POST" action="/admin/tours/<%= tour._id %>/pricing/create">
    <div class="mb-3">
      <label for="type" class="form-label">Type</label>
      <select class="form-select" id="type" name="type" required>
        <option value="">Select an option</option>
        <option value="adult">Adult</option>
        <option value="child">Child</option>
        <option value="infant">Infant</option>
      </select>
    </div>
    
    <div class="mb-3">
      <label for="price" class="form-label">Price</label>
      <input type="number" class="form-control" id="price" name="price" required min="0" step="0.01">
    </div>

    <button type="submit" class="btn btn-primary">Add Pricing</button>
    <a href="/admin/tours/<%= tour._id %>/pricing" class="btn btn-secondary">Cancel</a>
  </form>
</div>

<%- include('../../partials/admin-footer') %>

<%- include('../../partials/admin-header') %>

<div class="container mt-4">
  <h1>Edit Pricing</h1>
  <h3>Tour: <%= tour.title %></h3>
  <h4>Type: <%= pricing.type.charAt(0).toUpperCase() + pricing.type.slice(1) %></h4>

  <% if (locals.error) { %>
    <div class="alert alert-danger"><%= error %></div>
  <% } %>

  <form method="POST" action="/admin/pricing/<%= pricing._id %>/edit">
    <div class="mb-3">
      <label for="price" class="form-label">Price</label>
      <input type="number" class="form-control" id="price" name="price" required min="0" step="0.01" value="<%= pricing.price %>">
    </div>

    <button type="submit" class="btn btn-primary">Update Pricing</button>
    <a href="/admin/tours/<%= tour._id %>/pricing" class="btn btn-secondary">Cancel</a>
  </form>
</div>

<%- include('../../partials/admin-footer') %>
